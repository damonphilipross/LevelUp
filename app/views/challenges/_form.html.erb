<%= simple_form_for(@challenge) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.input :details, prompt: "Share your challenge details here" %>

  <%= f.input :email, input_html: { autocomplete: 'email' } %>

  <%= f.input :password, input_html: { autocomplete: 'current-password' } %>

  <%= f.input :picture, as: :file, input_html: { accept: User::AVATAR } %>

  <%= f.input :start_date, date select %>

  <%= f.input :duration, input[type=number] %>

  <%= f.input :verb, collection: User::VERB, input_html: { multiple: true } %>

  <%= f.input :value, as: :range 0..200 %>

  <%= f.input :freq, as: :radio_buttons, collection: 0..10 %>

  <%= f.input :operator, as: :check_boxes, collection: ['at least', 'less then', 'up to', 'must be'] %>



  <%= f.input :terms %>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
