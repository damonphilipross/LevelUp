<%= simple_form_for(@challenge) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>

  <%= f.input :detail, prompt: "Share your challenge details here" %>

  <%= f.input :start_date %>

  <%= f.input :duration %>

  <%= f.input :cost %>

  <%= f.input :metric_verb, collection: ['push ups', 'coding', 'meditating', 'table tennis matches'] %>

  <%= f.input :metric_value, range: 0..100 %>

  <%= f.input :metric_frequency, as: :radio_buttons, collection: 0..10 %>

  <%= f.input :metric_operator, as: :check_boxes, collection: ['at least', 'less then', 'up to', 'must be'] %>


  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
